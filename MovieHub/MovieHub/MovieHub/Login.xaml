<Window x:Class="MovieHub.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieHub"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Grid>
            <Label Content="Account Log In" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="30" FontWeight="Bold"/>
            <Label Content="Username" HorizontalAlignment="Left" Margin="244,170,0,0" VerticalAlignment="Top"/>
            <Label Content="Password" HorizontalAlignment="Left" Margin="244,240,0,0" VerticalAlignment="Top"/>
            <Button x:Name="login" Content="Log in" HorizontalAlignment="Left" Margin="431,341,0,0" VerticalAlignment="Top" Click="login_Click"/>
            <TextBox x:Name="username" HorizontalAlignment="Left" Margin="431,178,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="password" HorizontalAlignment="Left" Margin="431,248,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Button x:Name="back" Content="Back" HorizontalAlignment="Left" Margin="265,341,0,0" VerticalAlignment="Top" Click="back_Click"/>

        </Grid>

    </Grid>
</Window>
